<h2>Slideshow preview</h2>
<section id="slideshow_preview">
</section>
<script>
    $(document).ready(function() {
        const slideshow_preview = document.getElementById("slideshow_preview");
        const slideshow_preview_table = document.createElement('table');
        let slideshow_preview_table_tr;

        for (let i = 1; i <= 23; i++) {
            if (i % 4 === 1) {
                slideshow_preview_table_tr = document.createElement('tr');
                slideshow_preview_table.appendChild(slideshow_preview_table_tr);
            }

            let slideshow_preview_table_tr_td = document.createElement('td');
            slideshow_preview_table_tr_td.className = 'slideshow_preview_td';
            let slideshow_preview_image = document.createElement('img');
            slideshow_preview_image.className = 'slideshow_preview_image';
            slideshow_preview_image.setAttribute('data-jumpto', `slideshow_image_${i}`);
            slideshow_preview_image.src = `/media/dronhalozatok_vizsgalata__szimulacion_alapulo_betekintes.pptx_${i}.jpg`;
            slideshow_preview_table_tr_td.appendChild(slideshow_preview_image);
            slideshow_preview_table_tr.appendChild(slideshow_preview_table_tr_td);
        }

        slideshow_preview.appendChild(slideshow_preview_table);

        $('.slideshow_preview_image').hover(
            function() {
                $(this).css({
                    'transform': 'scale(1.3)',
                    'transition': 'transform 0.3s ease'
                });
            },
            function() {
                $(this).css('transform', 'scale(1)');
            }
        );
        $('.slideshow_preview_image').click(function() {
            //console.log($(this));
            //console.log($(this).data('jumpto'));
            $('html, body').animate(
                {
                    scrollTop: $('#' + $(this).data('jumpto')).offset().top
                },
                1000
            );
        });
    });
</script>
<style>
    #slideshow_preview table {
        width: 100%;
    }
    .slideshow_preview_td {
        width: 20%;
    }
    .slideshow_preview_image {
        width: 100%;
    }
</style>


<h2>Slideshow</h2>
<section id="slideshow">
</section>
<script>
    $(document).ready(function() {
        const slideshow = document.getElementById("slideshow");

        for (let i = 1; i <= 23; i++) {
            let slideshow_image = document.createElement('img');
            slideshow_image.src = `/media/dronhalozatok_vizsgalata__szimulacion_alapulo_betekintes.pptx_${i}.jpg`;
            slideshow_image.id = `slideshow_image_${i}`;
            slideshow.appendChild(slideshow_image);
            slideshow.appendChild(document.createElement('hr'));
        }
    });
</script>
<style>
    #slideshow img {
        width: 100%;
    }
</style>


<div id="sidebar">
    <button id="jump_to_menu">Jump to Menu</button>
    <button id="jump_to_video">Jump to Video</button>
    <button id="jump_to_preview">Jump to Preview</button>
    <button id="toggle_video_play">Play/Pause</button>
    <button id="toggle_video_sound">Mute/Unmute</button>
</div>
<script>
    $(document).ready(function() {
        $('#jump_to_menu').click(function() {
            $('html, body').animate(
                {
                    scrollTop: 0
                },
                1000
            );
        });

        $('#jump_to_preview').click(function() {
            $('html, body').animate(
                {
                    scrollTop: $('#slideshow_preview').offset().top
                },
                1000
            );
        });

        $('#jump_to_video').click(function() {
            $('html, body').animate(
                {
                    scrollTop: $('#slideshow_video').offset().top
                },
                1000
            );
        });

        const video = document.getElementById('presentation');
        $('#toggle_video_play').click(function() {
            if (video.paused) {
                video.play();
            }
            else {
                video.pause();
            }
        });
        $('#toggle_video_sound').click(function() {
            video.muted = !video.muted;
        });
    });
</script>
